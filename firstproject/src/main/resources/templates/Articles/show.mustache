<!-- 헤더를 적용 -->
{{>./layouts/header}}


<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
  
  
  <!-- 컨트롤러에서 넘어오는 Model 객체에 저장되서 넘어오는 값을 사용 범위를 정할 수 있다. -->
  {{#article}} <!-- article 시작, /객체변수명 --> 
    <tr>
      <td>{{id}}</td>
      <td>{{title}}</td>
      <td>{{content}}</td>
    </tr>
  {{/article}}  <!-- article 끝 --> 
  </tbody>
</table>

<!-- 목록으로 돌아가기 추가 --> 
<a href= "/Articles" class="btn btn-primary"> 목록으로  </a>

<!-- 수정하기 -->
<a href= "/Articles/{{id}}/edit" class="btn btn-primary"> 수정하기  </a>

<!-- 글 삭제 링크 추가 --> 
<a href= "/Articles/{{id}}/delete" class="btn btn-primary"> 글 삭제  </a>






<!-- 푸터를 적용 -->
